@using TablesideOrdering.Areas.Admin.Models;
@model UsersViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="EditUser-@Model.UserID" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="UserID" />
                    <h3>Enter new user information</h3>
                    <div class="form-group">
                        <label>First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>                    
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        <select asp-for="Roles" asp-items="@ViewBag.RolesList" class="form-select"><option selected>--Please select role--</option></select>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>