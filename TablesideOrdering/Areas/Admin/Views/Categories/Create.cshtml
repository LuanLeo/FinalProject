@model TablesideOrdering.Models.Category

@{
    ViewData["Title"] = "Create";
}
<div class="modal fade" id="CreateCategory" tabindex="-1"  aria-hidden="true">
    <div class="popup" id="popup" >
        <div class="popup__content">
            <div class="modal-header">
                <h5 class="heading-tertiary">Create New Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="popup__text">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" style="width:60%; margin-left: auto; margin-right: auto" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
