@using TablesideOrdering.ViewModels.Admin;
@model ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="DeleteProduct-@Model.ProductId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Category Id:</label>
                        @Html.DisplayFor(model => model.CategoryId)
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Product Name:</label>
                        @Html.DisplayFor(model => model.Name)
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description: </label>
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label asp-for="Pic" class="control-label">Pic: </label>
                        @Html.DisplayFor(model => model.Pic)
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>