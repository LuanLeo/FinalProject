@using TablesideOrdering.Areas.Staff.ViewModels;
@model OrderViewModel
@{
    ViewData["Title"] = "Application Roles";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .checkout__order {
        background: #f5f5f5;
        padding: 40px;
        padding-top: 30px;
    }
        .checkout__order h4 {
            color: #1c1c1c;
            font-weight: 700;
            border-bottom: 1px solid #e1e1e1;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }
        .checkout__order .checkout__order__products {
            font-size: 18px;
            color: #1c1c1c;
            font-weight: 700;
            margin-bottom: 10px;
        }
            .checkout__order .checkout__order__products span {
                float: right;
            }
        .checkout__order ul {
            margin-bottom: 12px;
        }
            .checkout__order ul li {
                font-size: 16px;
                color: #6f6f6f;
                line-height: 40px;
                list-style: none;
            }
                .checkout__order ul li span {
                    font-weight: 700;
                    float: right;
                }
        .checkout__order .checkout__order__subtotal {
            font-size: 18px;
            color: #1c1c1c;
            font-weight: 700;
            border-bottom: 1px solid #e1e1e1;
            border-top: 1px solid #e1e1e1;
            padding-bottom: 15px;
            margin-bottom: 15px;
            padding-top: 15px;
        }
            .checkout__order .checkout__order__subtotal span {
                float: right;
            }
        .checkout__order .checkout__input__checkbox label {
            padding-left: 20px;
        }
        .checkout__order .checkout__order__total {
            font-size: 18px;
            color: #1c1c1c;
            font-weight: 700;
            border-bottom: 1px solid #e1e1e1;
            padding-bottom: 15px;
            margin-bottom: 25px;
        }
            .checkout__order .checkout__order__total span {
                float: right;
                color: #dd2222;
            }
        .checkout__order button {
            font-size: 18px;
            letter-spacing: 2px;
            width: 100%;
            margin-top: 10px;
        }
</style>

<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__order">
                            <h4>Order Details</h4>
                            <div class="checkout__order__products">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th style="color: black">
                                                Product Name
                                            </th>
                                            <th style="text-align:center;color: black">
                                                Size
                                            </th>
                                            <th style="text-align:center; color: black">
                                                Quantity
                                            </th>
                                            <th style="color: black">
                                                Price
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderDetail)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProductName)
                                                </td>
                                                <td style="text-align:center">
                                                    @Html.DisplayFor(modelItem => item.Size)
                                                </td>
                                                <td style="text-align:center">
                                                    @Html.DisplayFor(modelItem => item.ProQuantity)
                                                </td>
                                                <td>
                                                    <span> @Html.DisplayFor(modelItem => item.SubTotal) VND</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Order</h4>
                            <div class="checkout__order__products">Customer Details</div>
                            <ul>
                                @foreach (var item in Model.Order)
                                {
                                    <li>Phone number: <span>@Html.DisplayFor(model => item.PhoneNumber)</span></li>
                                    <li>Table number: <span>@Html.DisplayFor(model => item.TableNo)</span></li>
                                    <li>Date:  <span>@Html.DisplayFor(model => item.OrderDate)</span></li>
                                }
                            </ul>
                            @foreach (var item in Model.Order)
                            {
                                <div class="checkout__order__total">Total <span>@Html.DisplayFor(model => item.OrderPrice) VND</span></div>
                                <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="@("#DeleteOrder-" + item.OrderId)" data-url="@Url.Action($"Delete/{item.OrderId}")">
                                    Delete Order
                                </button>
                                @await Html.PartialAsync("Delete", item)

                                <a asp-controller="Order" asp-action="MarkDone" asp-route-id="@item.OrderId" style="color:white">
                                    <button class="btn btn-success m-1">
                                        Mark as Done
                                    </button>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
