@using TablesideOrdering.Areas.Staff.ViewModels;
@model OrderViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="DeleteOrder-@Model.OrderId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="OrderId" />
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="form-group">
                        <label asp-for="OrderId" class="control-label">Order Id:</label>
                        @Html.DisplayFor(model => model.OrderId)
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderPrice" class="control-label">Order Price:</label>
                        @Html.DisplayFor(model => model.OrderPrice)
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderDate" class="control-label">Order Date:</label>
                        @Html.DisplayFor(model => model.OrderDate)
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductQuantity" class="control-label">Product Quantity: </label>
                        @Html.DisplayFor(model => model.ProductQuantity)
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number: </label>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Customer Name: </label>
                        @Html.DisplayFor(model => model.CusName)
                    </div>
                    <div class="form-group">
                        <label asp-for="TableNo" class="control-label">Table Number: </label>
                        @Html.DisplayFor(model => model.TableNo)
                    </div>                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
