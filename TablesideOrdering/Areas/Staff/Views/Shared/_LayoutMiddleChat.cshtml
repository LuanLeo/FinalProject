@using TablesideOrdering.Areas.Staff.ViewModels;
@model ChatViewModel;
@{
    ViewData["Title"] = "Staff Area";
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="~/css/toaststyle.css" />
<link rel="stylesheet" href="~/css/chatstaff.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="chat-area">
                            <!-- search -->
                            <div class="chatlist">
                                <div class="modal-dialog-scrollable">
                                    <div class="modal-content">
                                        <div class="chat-header">
                                            <div class="msg-search">
                                                <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Search" aria-label="search">
                                                <a class="add" href="#"><img class="img-fluid" src="https://mehedihtml.com/chatbox/assets/img/add.svg" alt="add"></a>
                                            </div>

                                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link active" id="Open-tab" data-bs-toggle="tab" data-bs-target="#Open" type="button" role="tab" aria-controls="Open" aria-selected="true">Open</button>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                    <button class="nav-link" id="Closed-tab" data-bs-toggle="tab" data-bs-target="#Closed" type="button" role="tab" aria-controls="Closed" aria-selected="false">Closed</button>
                                                </li>
                                            </ul>
                                        </div>
                                        <!-- search -->
                                        <div class="modal-body">
                                            <!-- chat-list -->
                                            <div class="chat-lists">
                                                <div class="tab-content" id="myTabContent">
                                                    <div class="tab-pane fade show active" id="Open" role="tabpanel" aria-labelledby="Open-tab">
                                                        <!-- chat-list -->
                                                        <div class="chat-list">
                                                        @foreach (var chat in Model.ChatRoomList)
                                                        {
                                                            <a asp-action="ChatRoom" asp-route-id="@chat.ChatRoomID" class="d-flex align-items-center">
                                                                <div class="flex-shrink-0">
                                                                    <img class="img-fluid" src="/Logo/Avatar/defaultavatar.png" alt="user img" height="45px" width="45px" />
                                                                </div>
                                                                <div class="flex-grow-1 ms-3">
                                                                    <h3>
                                                                        Table - @chat.ChatRoomID
                                                                    </h3>
                                                                </div>
                                                            </a>
                                                        }
                                                        <!-- chat-list -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- chatbox-->
                            <div class="chatbox">
                                @RenderBody();
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@await RenderSectionAsync("Scripts", required: false)
@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chatstaff.js"></script>
}
