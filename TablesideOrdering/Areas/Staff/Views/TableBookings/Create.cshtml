@using TablesideOrdering.Areas.Staff.Models;
@model TableBooking

@{
    ViewData["Title"] = "Create Table Booking";
}

<div class="modal fade" id="CreateTableBooking" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Booking Form</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Create" asp-controller="TableBookings">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Table" class="control-label"></label>
                        <select asp-for="Table" asp-items="@ViewBag.TableBookingList" class="form-control">Select</select>
                        <span asp-validation-for="Table" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BookDate" class="control-label"></label>
                        <input asp-for="BookDate" class="form-control" />
                        <span asp-validation-for="BookDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Customer Name</label>
                        <input asp-for="CusName" class="form-control" />
                        <span asp-validation-for="CusName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>