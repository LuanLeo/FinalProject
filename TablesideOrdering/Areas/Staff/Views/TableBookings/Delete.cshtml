@using TablesideOrdering.Areas.Staff.Models;
@model TableBooking

@{
    ViewData["Title"] = "Delete Table Booking";
}
<div class="modal fade" id="DeleteTableBooking-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Delete" asp-controller="TableBookings" method="post">
                    <input type="hidden" asp-for="Id" />
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="form-group">
                        <label asp-for="Table" class="control-label">Table:</label>
                        @Html.DisplayFor(model => model.Table)
                    </div>
                    <div class="form-group">
                        <label asp-for="BookDate" class="control-label">BookDate:</label>
                        @Html.DisplayFor(model => model.BookDate)
                    </div>
                    <div class="form-group">
                        <label asp-for="CusName" class="control-label">Customer Name: </label>
                        @Html.DisplayFor(model => model.CusName)
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">PhoneNumber: </label>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>