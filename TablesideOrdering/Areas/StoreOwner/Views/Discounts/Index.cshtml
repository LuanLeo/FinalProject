@using TablesideOrdering.Areas.StoreOwner.Models;
@model IEnumerable<Discount>
@{
    ViewData["Title"] = "Discount List";
    Layout = "~/Areas/StoreOwner/Views/Shared/_StoreOwnerLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="body-wrapper">
            <div class="container-fluid">
                <h1>All Discount</h1>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateDiscount">
                    Create
                </button>
                @await Html.PartialAsync("Create", new Discount())

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Discount Code
                            </th>
                            <th>
                                Discount Value
                            </th>
                            <th>
                                Discount Type
                            </th>
                            <th>
                                Day Start
                            </th>
                            <th>
                                Day End
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DayStart)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DayEnd)
                                </td>
                                <td align="center">
                                    <button type="button" class="btn btn-warning m-1" data-toggle="modal" data-target="@("#EditDiscount-" + item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">
                                        Edit
                                    </button>
                                    @await Html.PartialAsync("Edit", item)
                                    <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="@("#DeleteDiscount-" + item.Id)" data-url="@Url.Action($"Delete/{item.Id}")">
                                        Delete
                                    </button>
                                    @await Html.PartialAsync("Delete", item)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/sidebarmenu.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/assets/js/dashboard.js"></script>
</body>
@await Component.InvokeAsync("Notyf")

@section Scripts{
    <script>
        function DiscountSelectType() {
            type = document.getElementById("getType").value;
            if (type == "Money") {
                document.getElementById("Form").style.display = "block";
                document.getElementById("Money").style.display = "block";
                document.getElementById("Percent").style.display = "none";
            }
            else if (type == "Percent") {
                document.getElementById("Form").style.display = "block";
                document.getElementById("Percent").style.display = "block";
                document.getElementById("Money").style.display = "none";
            } else {
                document.getElementById("Form").style.display = "none";
                document.getElementById("Percent").style.display = "none";
                document.getElementById("Money").style.display = "none";
            }
        }

    </script>
}