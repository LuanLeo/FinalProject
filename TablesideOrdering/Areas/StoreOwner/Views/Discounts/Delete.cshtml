@model TablesideOrdering.Areas.StoreOwner.Models.Discount

@{
    ViewData["Title"] = "Delete Discount";
}

<div class="modal fade" id="DeleteDiscount-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Discount</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <h3>Are you sure you want to delete this?</h3>
                    <div class="form-group">
                        <label class="control-label">Discount Code:</label>
                        @Html.DisplayNameFor(model => model.DisCode)
                    </div>
                    <div class="form-group">
                        <label class="control-label">Discount Value</label>
                        @Html.DisplayFor(model => model.DisValue)
                    </div>
                    <div class="form-group">
                        <label class="control-label">Discount Type:</label>
                        @Html.DisplayFor(model => model.DisType)
                    </div>
                    <div class="form-group">
                        <label class="control-label">Start Day:</label>
                        @Html.DisplayFor(model => model.DayStart)
                    </div>
                    <div class="form-group">
                        <label class="control-label">End Day:</label>
                        @Html.DisplayFor(model => model.DayEnd)
                    </div>
                    <div class="form-group">
                        <label class="control-label">Status:</label>
                        @Html.DisplayFor(model => model.Status)
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
