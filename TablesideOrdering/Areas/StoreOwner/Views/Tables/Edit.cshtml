@using TablesideOrdering.Areas.StoreOwner.Models
@model Table
@{
    ViewData["Title"] = "Edit Table";
}

<div class="modal fade" id="EditTable-@Model.IdTable" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Table</h5>
            </div>
            <div class="container-fluid">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdTable" />
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">People Quantity</label>
                        <input asp-for="PeopleCap" class="form-control" />
                        <span asp-validation-for="PeopleCap" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
