@using TablesideOrdering.ViewModels;
@model HomeViewModel
@{
    ViewData["Title"] = "Cart Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Css Styles -->
    <link rel="stylesheet" href="../css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="../css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="../css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="../css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="../css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="../css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="../css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="../css/style.css" type="text/css">
    <link rel="stylesheet" href="~/css/paymentselect.css" />
</head>
<style>
    .pointer {
        cursor: pointer;
    }

</style>
<body>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../Logo/BackgroundImg/coffeehouse.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Shopping Cart</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            @using (Html.BeginForm("UpdateCart", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__table">
                            @if (Model.Cart.cartViewModels.Count() > 0)
                            {
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="shoping__product">Products</th>
                                            <th>Size</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Cart.cartViewModels)
                                        {
                                            <tr>
                                                <td class="shoping__cart__item">
                                                    <img src="../ProductImage/@item.Pic" alt="" height="100" width="100">
                                                    <h5>@item.Name</h5>
                                                </td>
                                                <td class="shoping__cart__size">
                                                    @item.Size
                                                </td>
                                                <td class="shoping__cart__price">

                                                    @item.Price VND
                                                </td>
                                                <td class="shoping__cart__quantity">
                                                    <div class="quantity">
                                                        <div class="pro-qty">
                                                            <a class="dec qtybtn" data-id="@item.Id">-</a>
                                                            <input type="text" value="@item.Quantity">
                                                            <a class="inc qtybtn" data-id="@item.Id">+</a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="shoping__cart__total">
                                                    @item.TotalProPrice VND
                                                </td>
                                                <td class="shoping__cart__item__close">
                                                    <a asp-action="DeleteFromCart" asp-controller="Home" asp-route-id="@item.Id"><span class="icon_close"></span></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <h2>There is nothing here</h2>
                            }


                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="shoping__cart__btns">
                            <a asp-action="Menu" asp-controller="Home" class="primary-btn cart-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                                </svg>
                                Continue Shopping
                            </a>
                            <a class="update-cart primary-btn cart-btn cart-btn-right pointer" style="border:none; color:#ffffff">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
                                </svg>
                                Upadate Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5 style="text-align:center; font-size: 30px; color:#fd7a8c">
                            Cart Total
                        </h5>
                        <ul>
                            <li>Total <span>@Model.Cart.CartTotal VND</span></li>
                        </ul>
                        <div class="shoping__discount">
                            <ul>
                                <li>Discount Code <span>@Model.CouponShow</span></li>
                            </ul>
                            <form id="Form" action="/Home/CouponApply">
                                <input type="text" for="CouponCode" id="CouponCode" name="CouponCode" placeholder="Enter your discount code" />
                                <button type="submit" onclick="submitForm()" class="site-btn">APPLY</button>
                            </form>
                        </div>
                        <div class="paymentcontainer">
                            <ul>
                                <li>Select a Payment method</li>
                            </ul>
                            <form asp-action="PaymentMethod">
                                <input asp-for="PaymentType" type="radio" id="VNPay" value="VNPay">
                                <input asp-for="PaymentType" type="radio" id="Cash" value="Cash">
                                <input asp-for="PaymentType" type="radio" id="Momo" value="Momo">
                                <div class="category">
                                    <label for="VNPay" class="VNPayMethod">
                                        <div class="imgName">
                                            <div class="imgContainer VNPay">
                                                <img src="/PaymentMethod/VNPay.png" alt="">
                                            </div>
                                        </div>
                                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #28a745"></i></span>
                                    </label>
                                    <label for="Momo" class="MomoMethod">
                                        <div class="imgName">
                                            <div class="imgContainer Momo">
                                                <img src="/PaymentMethod/MoMo.png" alt="">
                                            </div>
                                        </div>
                                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #28a745"></i></span>
                                    </label>
                                    <label for="Cash" class="CashMethod">
                                        <div class="imgName">
                                            <div class="imgContainer Cash">
                                                <img src="/PaymentMethod/Cash.png" alt="">
                                            </div>
                                        </div>
                                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #28a745"></i></span>
                                    </label>
                                </div>
                                <input type="submit" class="primary-btn" style="width:100%; display: block; margin: auto ; text-align:center ; border:none" value="PROCEED TO CHECKOUT">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->
    <!-- Js Plugins -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/jquery.slicknav.js"></script>
    <script src="/js/mixitup.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    @section Scripts{
        <script>
            var proQty = $('.pro-qty');
            proQty.on('click', '.qtybtn', function () {
                var $button = $(this);
                var oldValue = $button.parent().find('input').val();
                if ($button.hasClass('inc')) {
                    var newVal = parseFloat(oldValue) + 1;
                } else {
                    // Don't allow decrementing below zero
                    if (oldValue > 0) {
                        var newVal = parseFloat(oldValue) - 1;
                    } else {
                        newVal = 0;
                    }
                }
                $button.parent().find('input').val(newVal);
            });

            $(document).ready(function () {
                $(".inc").click(function () {
                    $.ajax({
                        url: "/Home/IncQty",
                        data: {
                            id: $(this).data("id")
                        },
                        success: function (data) {
                            console.log(data);
                        }
                    })
                })
            })

            $(document).ready(function () {
                $(".dec").click(function () {
                    $.ajax({
                        url: "/Home/DecQty",
                        data: {
                            id: $(this).data("id")
                        },
                        success: function (data) {
                            console.log(data);
                        }
                    })
                })
            })

            $(document).ready(function () {
                $(".update-cart").click(function () {
                    location.reload()
                })
            })

            $("#Form").submit(function (e) {
                e.preventDefault(); 
                var form = $(this);
                var actionUrl = form.attr('action');

                $.ajax({
                    url: "/Home/CouponApply",
                    data: form.serialize(),
                    success: function (data) {
                        location.reload();
                    }
                });

            });
        </script>
    }
</body>
@await Component.InvokeAsync("Notyf")
