@using TablesideOrdering.ViewModels;
@model HomeViewModel;

<style>
    .button {
        width: 40px;
        height: 40px;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        transition: all 0.3s ease 0s;
        cursor: pointer;
        outline: none;
    }

    hr {
        width: 20%;
        border: 0;
        width: 100%;
        background-color: black;
        margin: 0px 0px 20px 0px;
    }

    .button:hover {
        background-color: #2EE59D;
        box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
        color: #fff;
    }
</style>

@if (Model.ChatList.Contains(Model.Chat) == true)
{
    <div id="live-chat" style=" z-index: 1">
        <header class="clearfix">
            <h4>Chat with Staff</h4>
        </header>
        <div class="chat">
            <div class="chat-history" id="messages">

                <div class="chat-message clearfix" id="chatbox">
                    <img src="/Logo/Avatar/user.png" alt="" width="32" height="32">
                    <div class="chat-message-content clearfix">
                        <span class="chat-time">@DateTime.Now</span>
                        <h5>Staff</h5>
                        <p>
                            Hello, if you need help, just text to us
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left-heart" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12ZM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2Z" />
                                <path d="M8 3.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132Z" />
                            </svg>
                        </p>
                    </div>
                    <hr/>
                </div>
            </div>
            <hr />
            <fieldset>
                <input type="hidden" id="userInput" value="@Model.Chat.ChatRoomID" />
                <input type="hidden" id="receiverInput" value="@Model.Chat.ChatRoomID" />
                <input style="width:80%; margin:0px 0px 0px 2%" type="text" id="messageInput" />
                <button type="button" id="sendButton" class="button"><img src="~/Logo/ChatIcon.png" width="25" height="25" /></button>
            </fieldset>
            <br />
        </div> <!-- end chat -->
    </div> <!-- end live-chat -->
}