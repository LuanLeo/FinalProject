@using TablesideOrdering.ViewModels;
@model HomeViewModel;

<div id="live-chat" style=" z-index: 1">
    <header class="clearfix">
        <h4>Chat with Staff</h4>
    </header>
    <div class="chat">
        <div class="chat-history" id="scroll">
            <div class="chat-message clearfix" id="chatbox">
            </div>
        </div>
        <hr />
        <fieldset>
            <input type="hidden" id="userInput" value="@Model.Chat.ChatRoomID" />
            <input type="hidden" id="receiverInput" value="@Model.Chat.ChatRoomID" />
            <input style="width:80%; margin:0px 0px 0px 2%" type="text" id="messageInput" />
            <button type="button" id="sendButton" class="button"><img src="~/Logo/ChatIcon.png" width="25" height="25" /></button>
        </fieldset>
        <br />
    </div> <!-- end chat -->
</div> <!-- end live-chat -->

<style>
    .button {
        width: 40px;
        height: 40px;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        transition: all 0.3s ease 0s;
        cursor: pointer;
        outline: none;
    }

    hr {
        width: 20%;
        border: 0;
        width: 100%;
        background-color: black;
        margin: 0px 0px 20px 0px;
    }

    .button:hover {
        background-color: #2EE59D;
        box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
        color: #fff;
    }
</style>