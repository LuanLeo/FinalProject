@using Microsoft.AspNetCore.Identity
@model IdentityRole

<div class="row">
    <div class="col-md-4">
        <form method="post">
            
                <h2>Create New Role</h2>
                <hr />
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">                
                <input asp-for="Name" class="form-control" aria-required="true"/>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-controller="AppRoles" asp-action="Index" class="btn btn-secondary btn-danger" style="width:150px">
                        <i class="gg-arrow-left d-inline-block align-middle"></i>
                        Back
                    </a>
                    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

